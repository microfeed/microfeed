{
  "name": "microfeed",
  "version": "0.1.5",
  "license": "MIT",
  "scripts": {
    "dev": "yarn setup:development && concurrently --kill-others-on-fail \"yarn dev:edge\" \"yarn dev:client\"",
    "dev:edge": "DEPLOYMENT_ENVIRONMENT=development wrangler pages dev --d1 FEED_DB=id_placeholder --local ./public",
    "dev:client": "webpack serve --host localhost --mode development",
    "build:production": "NODE_ENV=production webpack --config ./webpack.config.js",
    "setup:development": "yarn install && node ops/generate_local_vars.js && node ops/init_feed_db.js",
    "setup:production": "sh ops/generate_vars_toml.sh && yarn install && node ops/init_r2.js && node ops/init_feed_db.js && node ops/init_project.js",
    "deploy:cloudflare": "node ops/sync_project_config.js && yarn build:production",
    "deploy:github": "node ops/sync_project_config.js && node ops/direct_upload.js",
    "test": "TZ=UTC jest",
    "sync-version": "node ops/sync_microfeed_version.js"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.4",
    "@heroicons/react": "^2.0.13",
    "@tanstack/react-table": "^8.5.28",
    "@uiw/react-textarea-code-editor": "^2.1.9",
    "axios": "^1.2.1",
    "clsx": "^1.2.1",
    "cropperjs": "^1.5.12",
    "fast-xml-parser": "^4.0.11",
    "html-to-text": "^8.2.1",
    "jest": "^29.4.3",
    "lz-string": "^1.4.4",
    "mustache": "^4.2.0",
    "quill-blot-formatter": "^1.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-drag-drop-files": "^2.3.7",
    "react-quill": "^2.0.0",
    "react-select": "^5.6.0",
    "react-textarea-autosize": "^8.4.0",
    "react-toastify": "^9.1.0",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.231.0",
    "@aws-sdk/s3-request-presigner": "^3.231.0",
    "@babel/core": "^7.20.12",
    "@babel/runtime": "^7.20.13",
    "@databases/split-sql-query": "1.0.3",
    "@databases/sql": "3.2.0",
    "@swc/core": "^1.3.8",
    "@swc/jest": "^0.2.23",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/postcss": "^4.0.14",
    "better-sqlite3": "^11.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^9.1.2",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^2.6.1",
    "postcss": "^8.4.18",
    "postcss-loader": "^7.0.1",
    "style-loader": "^3.3.1",
    "svg-inline-loader": "^0.8.2",
    "swc-loader": "^0.2.3",
    "tailwind-gradient-mask-image": "^1.0.0",
    "tailwindcss": "^4.0.14",
    "toml": "^3.0.0",
    "webpack": "^5.74.0",
    "webpack-bundle-tracker": "^1.6.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1",
    "wrangler": "^4.0.0"
  }
}
